<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/border_margin"
    android:layout_marginTop="@dimen/border_margin"
    android:layout_marginEnd="@dimen/border_margin"
    android:background="@drawable/rounded_rectangle"
    android:scrollHorizontally="false">

    <TextView
        android:id="@+id/tvRecipeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivRecipeImage"
        android:paddingTop="@dimen/border_margin"
        android:text="@string/recipe_name"
        android:textSize="19sp" />

    <ToggleButton
        android:id="@+id/btnSaveRecipe"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:layout_alignBottom="@id/ivRecipeImage"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/heart_icon_blue"
        android:checked="false"
        android:textOff="@string/empty"
        android:textOn="@string/empty" />

    <ImageView
        android:id="@+id/ivRecipeImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:contentDescription="@string/recipe_title"
        tools:srcCompat="@tools:sample/avatars" />
</RelativeLayout>